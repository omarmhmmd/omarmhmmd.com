---
const { posts } = Astro.props;
---

<style>
  a {
    color: black;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
</style>

<div>
  <ul>
    {
      posts.map((post: any) => (
        <li>
          <a href={`/work/${post.id}/`}>
            {" "}
            {post.data.title}{" "}
            {post.data.tags.map((tag: any) => `[${tag}]`).join(" ")}{" "}
            {new Date(post.data.pubDate).getFullYear()}
          </a>
        </li>
      ))
    }
  </ul>
</div>
